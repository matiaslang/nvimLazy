#!/usr/bin/env bash
# Wrapper for csharp-ls to suppress warnings

# Check if csharp-ls is available in Mason
MASON_BIN="$HOME/.local/share/nvim/mason/bin/csharp-ls"

if [ -f "$MASON_BIN" ]; then
    exec "$MASON_BIN" "$@" 2>/dev/null
else
    echo "Error: csharp-ls not found. Please install it via Mason." >&2
    exit 1
fi
